<%- include('./partials/header'); -%>

<h1>Home</h1>
<p class="sub-text"> <%= homeContent %> </p>

<% postContent.forEach(post => { %>
<h3> <%= post.title %> </h3>

<p> <%= post.body.substring(0, 100) + ' ...' %>
    <a href='/posts/<%= post.title %>'> Read more</a>
</p>
<% }) %>

<h4>Click on the Compose button to log your day</h4>
<button type='submit' class="btn btn-lg"> <a class="compose-link" href="/compose">Compose</a></button>


<%- include('./partials/footer'); -%>
